# Environment variables for Crawl2Answer

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Website to crawl
BASE_URL=https://docs.python.org/3/
CRAWL_DELAY=1.0
MAX_PAGES=10
MAX_DEPTH=3
REQUEST_TIMEOUT=30

# Text processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Embedding configuration
EMBEDDING_MODEL_TYPE=sentence_transformers
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
# OPENAI_API_KEY=your_openai_api_key_here

# Vector database
VECTOR_DB_PATH=data/embeddings

# Retrieval settings
RETRIEVAL_K=5
SIMILARITY_THRESHOLD=0.1

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Data directories
DATA_DIR=data